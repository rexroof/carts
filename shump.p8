pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function _init()
 cls(0)
 ship={ pix=2,x=64,y=64,show=1,sx=0,sy=0 }
 bullet={ pix=16,x=64,y=-10,show=0,life=60,sx=0,sy=0 }
 flamespr=5
end

function _draw()
 cls(0)
 -- spr(ship.pix,ship.w,ship.h)
 circfill(ship.x+4,ship.y, 3, 7)
 if(bullet.show == 1) spr(bullet.pix,bullet.x,bullet.y)
 if(ship.show == 1) spr(ship.pix,ship.x,ship.y)
 spr(flamespr,ship.x,ship.y+6)
end

function _update()
 -- ship.x=ship.x + rnd(6) - 3
 -- ship.y=ship.y + rnd(6) - 3
 if(ship.x > 125) ship.x=120
 if(ship.y > 125) ship.y=120
 if(ship.x < 0) ship.x=1
 if(ship.y < 0) ship.y=1

 if(ship.show == 1) then
  if(bullet.life > 0) then
   bullet.life-=1
   bullet.y-=1
  else
   bullet.life=60
   bullet.show=0
  end
 end

 ship.sx=0
 ship.sy=0
 ship.pix=2

 if btn(0) then
   ship.sx=-2
   ship.pix=1
 end

 if btn(1) then
   ship.sx=2
   ship.pix=3
 end

 if btn(2) then
   ship.sy=-2
 end

 if btn(3) then
   ship.sy=2
 end

 if btnp(5) then
   bullet.show=1
   bullet.x=ship.x
   bullet.y=ship.y-3
   sfx(0)
 end

 ship.x=ship.x+ship.sx
 ship.y=ship.y+ship.sy

 bullet.y=bullet.y-4

 flamespr=flamespr+1
 if (flamespr > 8) flamespr=5

end
